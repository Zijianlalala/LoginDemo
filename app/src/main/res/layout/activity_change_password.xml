<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/registeredbg">
    <TextView
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:typeface="monospace"
        android:textSize="50sp"
        android:textColor="@color/colorPrimary"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/activity_login_layoutbackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone3"/>
        <EditText
            android:id="@+id/edit_change_phone_number"
            android:textColorHint="@color/activity_login_hint"
            android:hint="@string/activity_registered_phonenumber"
            android:maxLines="1"
            android:imeOptions="actionUnspecified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/activity_login_layoutbackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locker"/>
        <EditText
            android:id="@+id/edit_change_pwd1"
            android:textColorHint="@color/activity_login_hint"
            android:hint="@string/activity_registered_password_1"
            android:maxLines="1"
            android:imeOptions="actionUnspecified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/activity_login_layoutbackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locker"/>
        <EditText
            android:id="@+id/edit_change_pwd2"
            android:textColorHint="@color/activity_login_hint"
            android:hint="@string/activity_registered_password_2"
            android:maxLines="1"
            android:imeOptions="actionUnspecified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/btn_change_submit"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/activity_forget1_button"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/login_buttonl"/>
</LinearLayout>